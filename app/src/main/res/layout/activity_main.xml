<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thiam.labexer_oct26.MainActivity">

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:text="Username:"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Password:"
        android:textSize="18sp"
        android:layout_below="@+id/tv_username"
        android:layout_alignLeft="@+id/tv_username"
        android:layout_alignStart="@+id/tv_username" />

    <EditText
        android:id="@+id/etusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_username"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/tv_username"
        android:layout_toRightOf="@+id/tv_username"
        android:ems="10" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignTop="@+id/tv_password"
        android:layout_toRightOf="@+id/tv_password"
        android:layout_toEndOf="@+id/tv_password"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/bt_sharedpref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="savepreferences"
        android:text="Shared Preferences"
        android:layout_below="@+id/et_password"
        android:layout_alignLeft="@+id/tv_password"
        android:layout_alignStart="@+id/tv_password"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="52dp" />

    <Button
        android:id="@+id/bt_internal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveinternal"
        android:text="Internal Storage"
        android:layout_alignBaseline="@+id/bt_sharedpref"
        android:layout_alignBottom="@+id/bt_sharedpref"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_internal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:onClick="nextact"
        android:text="Next" />

</RelativeLayout>
